    <nav>
        <h4>ReadnReview</h4>
        <ul>
            <li><a href="/bookshops">Bookshop</a></li>
            <li><a href="/books">BooksList</a></li>
            <li><a href="/my_list">My List</a></li>
            <li><a href="/user">My Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
  
    <div class="container">
        <div class="header">
            <i class="fa fa-bars"></i>
            <i class="fa fa-cog"></i>
        </div>
        <div class="middle">
            {{#if profile_img }}
                <img src={{profile_img}} alt="" class="user-pic" />
            {{else}}
                <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse2.mm.bing.net%2Fth%3Fid%3DOIP.jRfbG71P_UTXJl-EGCx43QAAAA%26pid%3DApi&f=1" alt="" class="user-pic" />
            {{/if}}

            <h4 class="name">Name : {{name}}</h4>
            <h4 class="work">Usename : {{username}}</h4>
            <h4 class="social">Email : {{email}}</h4>
            <h4 class="social">Address : {{location}}</h4>
            <a href={{edit_link}}>
                <button class="btn-follow" >Edit Profile </button>
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
