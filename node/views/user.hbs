<style>
    .container {
  width: 400px;
  height: 500px;
  background-color: #d4c6df;
  margin: 50px auto;
  border-radius: 12px;
  overflow: hidden;
}

.header i{
  font-size: 20px;
  color: rgba(255,255,255,0.7);
  padding: 10px;
  margin-top:20px;
}

.fa-bars{
  float: left;
  margin-left:20px;
}

.fa-bars:hover{
  cursor: pointer;
  animation: bars 0.3s ease-in forwards;
}

.fa-cog{
  float: right;
  margin-right:20px;
}

.fa-cog:hover{
  cursor: pointer;
  animation: rotate 1s ease-in infinite;
}

div.middle{
  position:relative;
  text-align: center;
  top: 70px;
}

img.user-pic{
  width:110px;
  height: 110px;
  border-radius: 100%;
  background: rgba(255,255,255,0.7);
  border: 5px solid rgba(255,255,255,1);
}

h4.name{
  font-size: 20px;
  color: rgba(7, 6, 6, 0.8);
  padding: 5px;
  padding-top: 10px;
}

h4.work{
  font-size: 20px;
  color: rgba(12, 7, 7, 0.5);
  padding: 5px;
  padding-top: 0px;
}

h4.social{
  font-size: 20px;
  color: rgba(10, 5, 5, 0.5);
  padding: 5px;
}

.btn-follow
{
  position: relative;
  padding: 15px 70px;
  top: 30px;
  background: rgba(255,255,255,1);
  border: none;
  border-radius: 20px;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #1f22f1;
  border: 1px solid transparent;
  transition: all 0.5s ease-in;
}

.btn-follow:hover
{
  cursor: pointer;
  border: 1px solid rgba(255,255,255,0.2);
  background: #261bc4;
  color: rgb(65, 136, 228);
}

.fa-lock{
  font-size: 20px;
  color: rgba(0,0,0,0.2);
  padding-top:15px;
}
.h5{
    padding-top: 5px;
}

@keyframes rotate{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(180deg);
  }
}

@keyframes bars{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(90deg);
  }
}

@keyframes img3d{
  0%{
    transform: rotateY(0deg);
  }
  100%{
    transform: rotateY(55deg);
  }
}



